<div class="row">
  <div class="col-xs-8 col-sm-6 col-md-4 col-xs-offset-2 col-sm-offset-3 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">Forgot your password?</div>
      <div class="panel-body">

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions", class: "btn btn-success" %>
          </div>
        <% end %>

      </div>
      <div class="panel panel-footer"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>
